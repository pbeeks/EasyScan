<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:BasicScanner;assembly=BasicScanner" x:Class="BasicScanner.LoginPage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout>
				<Image Source="newScanner.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
				<Entry x:Name="usernameBox" Placeholder="username" HorizontalOptions="CenterAndExpand" Text="{Binding UserParam}" />
				<Entry x:Name="passwordBox" Placeholder="password" IsPassword="true" HorizontalOptions="CenterAndExpand" Text="{Binding PassParam}" />
				<Button x:Name="loginButton" Command="{Binding LoginCommand}" Text="Login" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="Large" >
				</Button>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>